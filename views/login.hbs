
<div class="container login">
<form class="form-container w-25" action="/login" method="POST">
  
  <div class="form-group">
    <label for="login">Login</label>
    {{>input id='login' name='username' type='text' required='required' placeholder='Login'}}
  </div>
  <div class="form-group mb-3">
    <label for="password">Password</label>
      {{>input id='password' name='password' type='password' required='required' placeholder='Password'}}
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  {{#if error}}
  <div class="alert alert-danger mt-3" role="alert">
    {{ error }}
  </div>
  {{/if}}
</form>
</div>
